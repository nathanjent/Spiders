-- title:  game title
-- author: game developer
-- desc:   short description
-- script: moon

t=0
hitbox=true
p=
 x:120
 y:68
 w:9
 h:15
 vx:0
 vy:0
 ax:1
 ay:.2
 fx:.9
 jmp:-2.5
 transcolor:14
 sprt:
  id:1
  ox:-2
  oy:-1
  w:2
  h:2

solid=(x,y)->
 fget(mget(x//8,y//8),0)

aabb=(o)->
  o.x+o.vx,o.y+o.vy,o.x+o.vx+o.w-1,o.y+o.vy+o.h-1

collision=(o)->
 x1,y1,x2,y2=aabb o
 for x=x1,x2
  for y=y1,y2
   if solid(x,y)
    return true

groundCollision=(o)->
 x1,y1,x2,y2=aabb o
 solid(x1,y2+1) or solid(x2,y2+1)

ceilingCollision=(o)->
 x1,y1,x2,y2=aabb o
 solid(x1,y1) or solid(x2,y1)

draw=(o)->
 id=o.sprt.id+(t%60)//30*2
 x=o.x+o.sprt.ox
 y=o.y+o.sprt.oy
 spr id,x,y,o.transcolor,1,0,0,o.sprt.w,o.sprt.h
 if hitbox
  rectb o.x,o.y,o.w,o.h,3

export TIC=->
 -- input
 if btn 2
  p.vx=-1
 else if btn 3
  p.vx=1
 else
  p.vx=0

 if collision p
  p.vx=0

 if groundCollision p
  p.vy=0
 else
  p.vy+=p.ay

 if p.vy==0 and btnp 4
  p.vy=p.jmp

 if ceilingCollision p
  p.vy=0

 -- apply physics
 p.vx*=p.fx
 p.x+=p.vx
 p.y+=p.vy

 cls!
 map!
 draw p
 print "x:#{p.x},y:#{p.y}",1,1,3
 print "x:#{p.vx},y:#{p.vy}",1,8,3
 if collision p
  print "collision",1,16,3
 if groundCollision p
  print "ground collision",1,24,3
 t+=1

